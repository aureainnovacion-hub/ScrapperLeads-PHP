{
    "name": "aureainnovacion/scrapper-leads-php",
    "description": "Sistema profesional de captura de leads empresariales",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "AUREA INNOVACION",
            "email": "aurea@aureainnovacion.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^2.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "classmap": [
            "src/config/config.php",
            "src/database/migrate.php",
            "src/utils/GoogleScraper.php",
            "src/utils/Logger.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ScrapperLeads\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "lint": "phpcs --standard=PSR12 --extensions=php --exclude=PSR12.Files.FileHeader -n src/",
        "lint:fix": "phpcbf --standard=PSR12 --extensions=php src/",
        "analyze": "phpstan analyse src/",
        "deploy:staging": "php scripts/deploy/deploy.php staging",
        "deploy:production": "php scripts/deploy/deploy.php production",
        "db:migrate": "php scripts/database/migrate.php",
        "db:seed": "php scripts/database/seed.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

